<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingVertical="24dp">

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Messenger Bluetooth"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/instructionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aby połączyć się z jakimś urządzeniem, trzeba najpierw połączyć się z nim przez Bluetooth, a następnie:\n\n• Na jednym urządzeniu należy rozpocząć rozmowę jako serwer\n• Drugie urządzenie musi do niej dołączyć wybierając 'Dołącz do rozmowy'"
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:paddingBottom="24dp" />

        <TextView
            android:id="@+id/txtDevices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sparowane urządzenia:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnListDevices"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pokaż sparowane urządzenia"
            app:icon="@android:drawable/ic_menu_manage"
            app:iconPadding="8dp"
            app:iconGravity="textStart" />

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConnect"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dołącz do rozmowy"
            app:icon="@android:drawable/ic_menu_send"
            app:iconPadding="8dp"
            app:iconGravity="textStart" />

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartServer"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rozpocznij czat jako serwer"
            app:icon="@android:drawable/ic_menu_call"
            app:iconPadding="8dp"
            app:iconGravity="textStart" />

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShowHistory"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zobacz historię rozmów"
            app:icon="@android:drawable/ic_menu_recent_history"
            app:iconPadding="8dp"
            app:iconGravity="textStart" />
    </LinearLayout>
</ScrollView>
